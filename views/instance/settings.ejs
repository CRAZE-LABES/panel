<%- include('components/template') %>
<main id="content">
   <div class="bg-purple-900 bg-opacity-40">
      <div class="sm:flex sm:items-center px-8 pt-4">
         <div class="sm:flex-auto">
            <h1 class="text-base font-medium leading-6 text-purple-100">Manage Server</h1>
            <p class="mt-1 tracking-tight text-sm text-purple-300">View, update and manage an instance on the Skyport panel.</p>
         </div>
      </div>
  </div>
   <%- include('components/instance') %>
   <div class="p-3 bg-purple-900 bg-opacity-80 shadow-xl border border-purple-400/30 rounded-xl overflow-hidden sm:p-6 lg:p-10 ml-8 card" style="width: 900px;">
      <div class="flex flex-row">
         <div class="w-1/2 mr-4">
            <h2 class="text-md font-medium text-purple-100 tracking-tight">Change Instance Name</h2>
            <div class="mt-5">
               <div class="mr-4 mt-5">
                  <label class="text-purple-300 text-sm tracking-tight mb-2">Name</label>
                     <input id="name" placeholder="My Server" value="<%= instance.Name %>" class="rounded-xl focus:ring-purple-500 focus:border-purple-500 text-purple-100 bg-purple-800 placeholder-purple-400 text-sm mt-2 mb-6 w-96 items-center px-4 py-2 border border-purple-500 outline-none transition"/>
                  </div>
               </div>
               <button id="save" class="block rounded-xl mt-8 bg-purple-400 px-3 py-2 text-center text-sm font-medium text-purple-900 shadow-lg hover:bg-purple-300 transition focus-visible:outline focus-visible:ring-2 focus-visible:ring-purple-500">Save</button>
            </div>
         </div>
      </div>
   </div>
</main>
<script>
    document.getElementById('save').addEventListener('click', function() {
        const name = document.getElementById('name').value;
        window.location.href = '/instance/<%= req.params.id %>/change/name/' + name;
    });
</script>
<%- include('../components/footer') %>
